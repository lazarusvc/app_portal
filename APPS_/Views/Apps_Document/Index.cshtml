@model IEnumerable<Apps_.Models.Apps_Document>

@{
    ViewBag.Title = "Index";
}

<h2 class="fg-darkGray">Apps_Document:: Index</h2>
<a href="@Url.Action("Create")" class="image-button success" style="text-decoration: none !important;">
    <span class="mif-chevron-thin-right icon"></span>
    <span class="caption">Create New</span>
</a>
<br />
<table class="table striped table-border cell-border row-border compact bg-white" data-role="table">
    <thead>
        <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.desc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.media)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.media_type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apps_UsersRole.name)
        </th>
        <th>
            manage
        </th>
    </tr>
  </thead>

    <tbody>
	    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.desc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.media)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.media_type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apps_UsersRole.name)
                </td>
                <td>
                        <ul class="pagination no-gap size-large">
                            <li class="page-item">
                                <a href="@Url.Action("Edit", new { id = item.Id })" class="button info"><span class="mif-pencil icon"></span></a>
                            </li>
                            <li class="page-item">
                                <a href="@Url.Action("Delete", new { id = item.Id })" class="button alert"><span class="mif-bin icon"></span></a>
                            </li>
                        </ul>
                </td>
            </tr>
	    }
    </tbody>


</table>
